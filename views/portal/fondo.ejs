  <h1>Selección de imagen de fondo para el Portal de Servicios</h1>

  <% if (mensaje) { %><div class="alert alert-danger" role="alert"><%- mensaje %></div><% } %>

  <div class="container">

	<h2>Imagen de fondo seleccionada actualmente:</h2>
	<div class="row">
		<div class="col-lg-3 col-md-4 col-xs-6 thumb">
			<a href='#' onclik="void(0)">
				<img class="img-thumbnail" src="images/fondo/background.png<% if (mtime) { %>?<%- mtime %><% } %>" alt="imagen de fondo">
			</a> <%- mtime %>
		</div>
	</div>

  <% if (images && images.length) { %>
	<h2>Otras imágenes disponibles:</h2>
	<div class="row">
  <% images.forEach(function(image){ %>
		<div class="col-lg-3 col-md-4 col-xs-6 thumb">
			<img class="img-thumbnail" src="images/fondo/<%= image.filename %>?<%- image.mtime %>" alt="<%= image.filename %>" data-toggle="modal" data-target="#imgModal">
			<div class="caption"><p><%- image.date %><% if (image.description) { %><br><%- image.descripcion %><% } %></p></div>
		</div>
  <% }) %>
	</div>
  <% } %>

	<!-- Agrego archivos: boton y modal -->
	<button id="plus" type="button" class="btn btn-danger btn-circle btn-xl" data-toggle="modal" data-target="#myModal"><i class="fas fa-plus"></i></button>

	<form method="post" role="form" id="agrego" enctype="multipart/form-data">
	<input type="hidden" name="upload" value="on">
	<div id="myModal" class="modal fade" role="dialog">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h4 class="modal-title">Agregar imagen a la biblioteca</h4>
				</div>
				<div class="modal-body">
					<div class="form-group">
						<label class="control-label">Elegir archivo de imagen (el ancho recomendado es de 1366px):</label>
						<input id="adjunto" type="file" class="file" name="adjunto" multiple>
					</div>

					<div class="form-group">
						<label for="descripcion">Descripción:</label>
						<textarea class="form-control" rows="5" name="descripcion"></textarea>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
					<button type="submit" class="btn btn-primary">Enviar</button>
				</div>
			 </div>
		</div>
	 </div>
	</form>

	<!-- Acciones de archivo: modal -->
	<form method="post" id="acciones">
	<input type="hidden" name="img" id="imgTarget">
	<div id="imgModal" class="modal fade" role="dialog">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h4 class="modal-title">Acciones con la imagen: <span id="imgName"></span></h4>
				</div>
				<div class="modal-body">
					<div class="thumb">
						<img class="img-thumbnail" id="imgSelected" alt="" style="margin:auto">
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
					<button type="submit" class="btn btn-danger" name="borrar" value="on">Borrar</button>
					<button type="submit" class="btn btn-success" name="activar" value="on">Activar como fondo del Portal</button>
				</div>
			</div>
		</div>
	</div>
	</form>


  </div>
